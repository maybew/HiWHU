<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_list_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg_selector" >

    <RelativeLayout
        android:id="@+id/info_list_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="22dp" >

        <ImageView
            android:id="@+id/info_list_image"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/image_bg"
            android:padding="2dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/info_list_lefttoimage_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/info_list_image" >

            <TextView
                android:id="@+id/info_list_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/info_list_text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/info_list_text_title"
                android:layout_below="@id/info_list_text_title"
                android:textColor="#3366CC"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/info_list_text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/info_list_text_date"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/info_list_text_date"
                android:textColor="#333333"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/info_list_text_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/info_list_top_layout"
        android:layout_below="@id/info_list_top_layout"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:textColor="#333333"
        android:textSize="13sp" />

</RelativeLayout>
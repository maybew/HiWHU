<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_news_relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/main_news_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />
    <LinearLayout 
       android:id="@+id/main_news_linearLayout"
       android:orientation="vertical"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:background="@drawable/news_title"
        >
        
        <TextView 
            android:id="@+id/main_news_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingTop="5dip"
            android:paddingLeft="20dip"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            />
        <TextView 
            android:id="@+id/main_news_subtitle"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#000000"
            android:paddingTop="2dip"
            android:paddingLeft="20dip"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</RelativeLayout>
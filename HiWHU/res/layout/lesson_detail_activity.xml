<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <TextView
        android:id="@+id/lessonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:textSize="33sp" />

    <TextView
        android:id="@+id/lessonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lessonName"
        android:layout_below="@id/lessonName"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/lessonSpecial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/lessonName"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <Button
        android:id="@+id/operate"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignRight="@id/lessonSpecial"
        android:layout_below="@id/lessonSpecial"
        android:layout_margin="10dp" />

</RelativeLayout>